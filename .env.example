# Kunci rahasia untuk sesi Flask. Ganti dengan string acak yang kuat di file .env Anda.
SECRET_KEY="ganti-dengan-kunci-rahasia-yang-kuat"

# URI Koneksi Database
# Ganti nilai-nilai placeholder (DB_USER, DB_PASSWORD, dll.) dengan konfigurasi database Anda.
# Format: mysql+pymysql://DB_USER:DB_PASSWORD@DB_HOST:DB_PORT/DB_NAME
SQLALCHEMY_DATABASE_URI="mysql+pymysql://DB_USER:DB_PASSWORD@DB_HOST:DB_PORT/DB_NAME"

# Mode Debug Flask
# Atur ke "False" di lingkungan produksi untuk keamanan.
FLASK_DEBUG="True"

# Konfigurasi Chatbot AI (OpenRouter)
AI_PROVIDER="openrouter"
AI_BASE_URL="https://openrouter.ai/api/v1/chat/completions"
AI_MODEL="openrouter/auto"
AI_API_KEY=""
APP_BASE_URL="http://localhost:5000"